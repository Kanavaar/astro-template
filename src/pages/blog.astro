---
import BaseLayout from '../layouts/AstroBaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');
const title = "My Astro Learning Blog";
---
<BaseLayout title={ title }>
  <p>This is where I will post about my journey learning Astro.</p>
  { allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} desc={post.frontmatter.description} date={post.frontmatter.pubDate.slice(0,10)} author={post.frontmatter.author} />)}
</BaseLayout>
